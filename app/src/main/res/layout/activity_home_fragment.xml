<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_fragment"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/baby_status"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/baby_status_box">

        <ImageView
            android:id="@+id/baby_photo"
            android:layout_width="169dp"
            android:layout_height="203dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/bigbaby"></ImageView>

        <TextView
            android:id="@+id/bpm_widget"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/guideline_box"
            android:text="심박수 그림"
            android:textSize="40dp"
            app:layout_constraintLeft_toRightOf="@id/baby_photo"
            android:layout_marginLeft="5dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@id/heart_widget"
            android:layout_marginTop="3dp"></TextView>

        <TextView
            android:id="@+id/heart_widget"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/guideline_box"
            android:text="하트 그림 + bpm"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/baby_photo"
            android:layout_marginLeft="5dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"></TextView>

        <TextView
            android:id="@+id/status_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATUS : "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/baby_photo"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/bpm_widget"
            android:layout_marginTop="3dp"></TextView>

        <Button
            android:id="@+id/wake_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="깨우기"
            app:layout_constraintTop_toBottomOf="@id/baby_photo"
            android:layout_marginTop="3dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="45dp"
            android:onClick= "awaken"></Button>

        <TextView
            android:id="@+id/status_box"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="10dp"
            app:layout_constraintLeft_toRightOf = "@id/status_widget"
            android:layout_marginTop = "3dp"
            app:layout_constraintTop_toBottomOf="@id/bpm_widget"
            ></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:background="@drawable/guideline_box">

        <TextView
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="심박수그래프"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.appcompat.widget.LinearLayoutCompat>